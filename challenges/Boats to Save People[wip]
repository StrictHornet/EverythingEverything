class Solution:
    def numRescueBoats(self, people: List[int], limit: int) -> int:
        count = 0
        i = -1
        for person in people:
            i+=1
            if people[i] == limit:
                i += 2
                count += 1
            elif(people[i] + people[i+1] <= limit):
                count += 1
            else:
                count += 1
                
            if i == len(people) - 2:
                break
                
        return count
